    { id: 'GRV2025001', category: 'Road Maintenance', status: 'In Progress', date: '2025-01-05' },
    { id: 'GRV2025002', category: 'Water Supply', status: 'Resolved', date: '2025-01-03' }
  ]);

  const categories = [
    { id: 'cleanliness', name: 'Cleanliness & Sanitation', icon: 'ðŸ§¹' },
    { id: 'roads', name: 'Road Construction & Maintenance', icon: 'ðŸ›£ï¸' },
    { id: 'water', name: 'Waterways, Drainage & Water Supply', icon: 'ðŸ’§' },
    { id: 'infrastructure', name: 'Public Infrastructure & Utilities', icon: 'ðŸ—ï¸' }
  ];

  const services = [
    { name: 'Ration Card', docs: ['Aadhaar Card', 'Address Proof', 'Passport Photo'], icon: 'ðŸ“‹' },
    { name: 'Domicile Certificate', docs: ['Aadhaar Card', 'Birth Certificate', 'Address Proof'], icon: 'ðŸ ' },
    { name: 'Income Certificate', docs: ['Aadhaar Card', 'Income Proof', 'Bank Statement'], icon: 'ðŸ’°' },
    { name: 'Caste Certificate', docs: ['Aadhaar Card', 'Birth Certificate', 'Community Certificate'], icon: 'ðŸ“„' }
  ];

